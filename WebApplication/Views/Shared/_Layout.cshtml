<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="site-wrapper">
        <div id="site-canvas">
            <!--START HEADER -->
            <div class="header">
                <!-- START OFFCANVAS -->
                <div id="site-menu">
                    <div class="profile">
                        <img class="profile-avatar" src="images/profielfoto.jpg" />
                        <div class="profile-details">
                            <p>SCO-123456</p>
                            <p>Laurens Verkerk</p>
