                        </ul>
                    </div>
                </div>
                <!-- END OFFCANVAS -->
            </div>
            <!-- END HEADER -->
            <!-- START CONTENT -->
            <div class="content container">
                @RenderBody()
            </div>
            <!-- END CONTENT -->
            <!-- START FOOTER-->
            <div class="footer container-fluid">
