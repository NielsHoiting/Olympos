@{
    ViewBag.Title = "Home Page";
}
<div class="col col-sm-12 col-md-6 col-md-offset-3 text-center">
    <h2 class="heading">Inloggen</h2>
    <form class="form-signin">
        <label for="" class="sr-only">SCO-nummer</label>
        <input id="" class="form-control" placeholder="SCO-nummer" required autofocus>
        <label for="" class="sr-only">Wachtwoord</label>
        <input type="password" id="" class="form-control" placeholder="Wachtwoord" required>
        <div class="checkbox">
            <input type="checkbox" id="onthouden" value="remember-me">
            <label for="onthouden" class="label">Onthoud mij</label>
        </div>
        <button class="btn btn-lg btn-primary btn-login" type="submit">Inloggen</button>
    </form>
    <a href='@Url.Action("Register", "Account", "Account")' class="btn btn-lg btn-primary btn-register">
        Registreren
    </a>
</div>