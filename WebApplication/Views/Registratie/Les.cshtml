@using WebApplication.Models
@Scripts.Render("~/bundles/registratie")
@{
    ViewBag.Title = "Aanwezigheidsregistratie";
    Les les = (Les)ViewData["les"];
}

<div class="col col-sm-12 col-md-10 col-md-offset-1">
    <h2 class="heading text-center">@les.Sportaanbod.Sportcode</h2>
    <div class="row">
        <div class="col-sm-12 col-md-8">
            <h3 class="text-center">Deelnemers</h3>
            <table id="deelnemers" class="table">
                Deelnemers worden geladen
            </table>
        </div>
        <div class="col-sm-12 col-md-4">
            <h3 class="text-center">Deelnemer Toevoegen</h3>
                <label for="">Geboortedatum</label>
                <input type="date" id="geboortedatum_input" class="form-control" />
                <label for="">Achternaam</label>
                <input id="achternaam_input" class="form-control" placeholder="Achternaam" required>
                <button id="@les.les_no" type="button" class="btn btn-lg btn-primary btn-zoeken">Zoeken	</button>
            <h3 class="text-center">Lesgegevens</h3>
            <div class="les-detail">
                <h4 class="ta-l mar-b-zero">
                    Docent
                </h4>
                <p class="sub-res ta-l mar-zero">
                    @les.Sportdocent.voornaam @les.Sportdocent.achternaam
                </p>

                <h4 class="ta-l mar-b-zero">
                    Datum:
                </h4>
                <p class="sub-res ta-l mar-zero">
                   @les.begintijd.Date.ToString("dddd dd MMMM yyyy")
                </p>

                <h4 class="ta-l mar-b-zero">
                    Tijd:
                </h4>
                <p class="sub-res ta-l mar-zero">
                    @les.begintijd.ToString("HH:mm") - @les.eindtijd.ToString("HH:mm")
                </p>

                <h4 class="ta-l mar-b-zero">
                    Aantal plaatsen:
                </h4>
                <p class="sub-res ta-l mar-zero">
                    @les.max_aantal_deelnemers
                </p>

                <h4 class="ta-l mar-b-zero">
                    Aantal reserveringen:
                </h4>
                <p class="sub-res ta-l mar-zero">
                    @les.aantal_deelnemers
                </p>
            </div>
            <h3 class="text-center">Acties</h3>
            <a href="mededeling.html" class="btn btn-lg btn-primary btn-inschrijven">Een mededeling versturen</a>
            <a href="annuleren-docent.html" class="btn btn-lg btn-primary btn-inschrijven">Annuleer deze les</a>
        </div>
    </div>
</div>
				</div>
